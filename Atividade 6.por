//AS QUATROS OPERAÇÕES
programa {
  funcao inicio() {
    real numero1, numero2

    escreva("Digite o primeiro número: ")
    leia(numero1)
    escreva("Digite o segundo número: ")
    leia(numero2)

    escreva("SOMA: ",numero1+numero2,"\nSUBTRAÇÃO: ",numero1-numero2,"\nMULTIPLICAÇÃO: ",numero1*numero2,"\nDIVISÃO: ",numero1/numero2)
    
  }
}
